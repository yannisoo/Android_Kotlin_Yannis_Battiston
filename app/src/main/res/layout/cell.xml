<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:foreground="?android:attr/selectableItemBackgroundBorderless">
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cellTitle"
            tools:text="cellTitle" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="18sp"
            android:maxLines="1"
            android:singleLine="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:paddingTop="16dp" android:paddingStart="8dp" android:background="#E0DDDD"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cellUser"
            tools:text="cellUser"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/cellTitle" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:paddingTop="8dp" android:paddingLeft="16dp"
            android:background="#E0DDDD"/>
</androidx.constraintlayout.widget.ConstraintLayout>